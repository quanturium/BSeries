<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/episodeItem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/itemEpisodeIcon"
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/episode_icon"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:src="@drawable/bullet_archived" >
            </ImageView>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/gray2"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/itemEpisodeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAppearance="?android:attr/textAppearanceLarge" >
                </TextView>

                <TextView
                    android:id="@+id/itemEpisodeDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" >
                </TextView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:id="@+id/itemEpisodeRight1Icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/season_episode" >
                </ImageView>

                <TextView
                    android:id="@+id/itemEpisodeRight1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0"
                    android:textColor="@color/red1"
                    android:textSize="16dp" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:id="@+id/itemEpisodeRight2Icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/season_episode" >
                </ImageView>

                <TextView
                    android:id="@+id/itemEpisodeRight2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0"
                    android:textColor="@color/red1"
                    android:textSize="16dp" >
                </TextView>
            </RelativeLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>